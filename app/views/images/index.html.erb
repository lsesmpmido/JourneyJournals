<h1><%= t('views.common.title_index', name: i18n_pluralize(Image.model_name.human)) %></h1>
<%= link_to t('views.common.new', name: i18n_pluralize(Image.model_name.human)), new_image_path %>

<ul>
  <% @images.each do |image| %>
    <%= link_to image_path(image) do %>
      <%= image_tag image.file, alt: image.image_name, class: "fixed-height-image" %>
    <% end %>
    <br>
  <% end %>
</ul>
